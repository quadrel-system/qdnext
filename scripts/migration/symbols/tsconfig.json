{
  "compilerOptions": {
    "baseUrl": "../../../",
    "target": "es2015",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "module": "es6",
    "paths": {
      "cd-interfaces": ["dist/cd-interfaces"],
      "cd-utils": ["dist/cd-utils"],
      "cd-utils/*": ["dist/cd-utils/*"]
    }
  },
  "include": ["**.ts", "dist/**/*", "../shared/utils.ts"],
  "exclude": ["node_modules"]
}
