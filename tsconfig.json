{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/out-tsc",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2015",
    "paths": {
      "cd-interfaces": ["dist/cd-interfaces"],
      "cd-common": ["projects/cd-common/src/public_api"],
      "cd-common/utils": ["projects/cd-common/utils/src/public_api"],
      "cd-common/analytics": ["projects/cd-common/analytics/src/public_api"],
      "cd-common/consts": ["projects/cd-common/consts/src/public_api"],
      "cd-common/models": ["projects/cd-common/models/src/public_api"],
      "cd-common/pipes": ["projects/cd-common/pipes/src/public_api"],
      "cd-common/datasets": ["projects/cd-common/datasets/src/public_api"],
      "cd-common/directives": ["projects/cd-common/directives/src/public_api"],
      "cd-common/services": ["projects/cd-common/services/src/public_api"],
      "cd-definitions": ["projects/cd-definitions/src/public_api"],
      "cd-metadata": ["dist/cd-metadata"],
      "cd-metadata/*": ["dist/cd-metadata/*"],
      "cd-themes": ["dist/cd-themes"],
      "cd-themes/*": ["dist/cd-themes/*"],
      "cd-utils": ["dist/cd-utils"],
      "cd-utils/*": ["dist/cd-utils/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictAttributeTypes": false,
    "strictContextGenerics": false,
    "strictDomEventTypes": false,
    "strictDomLocalRefTypes": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictInputTypes": false,
    "strictLiteralTypes": false,
    "strictNullInputTypes": false,
    "strictOutputEventTypes": false,
    "strictSafeNavigationTypes": true
  },
  "exclude": [
    "lib/**",
    "docker/**",
    "documentation/**",
    "source-assets/**",
    "backend-services/*",
    "dist/backend-services/*",
    "firebase/**"
  ]
}
